/*sprites*/
@sprite-url: url({{spritesheet.escaped_image}});
{{#sprites}}
@{{name}}-position: {{px.offset_x}} {{px.offset_y}};
@{{name}}-width: {{px.width}};
@{{name}}-height: {{px.height}};
{{/sprites}}

[class*="icon-"] {
background-image: url({{spritesheet.escaped_image}});
}
{{#sprites}}
.icon-{{name}} {
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
}
{{/sprites}}